<navbar id="navbar-account" class="navbar-rightside">
  <ul>
    <%if session[:user_id]%> <!-- these appear if logged in -->

      <li><button title="Go to your profile" id="profile-page" class="btn btn-default"><span class="glyphicon glyphicon-user"></span></button></li>

      <li> <!--logout button-->
        <form id="logout-button" action="/session" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
          <button title="Log out" id="logout-button"  type="submit" class="btn btn-default"><span class="glyphicon glyphicon-log-out"></span></button>
        </form>
      </li>
      
    <%else%> <!-- these appear if you're not logged in -->

      <li> <!-- log in -->
        <form id="signup-button-form" action="/login" method="POST">
          <input type="email" name="email" placeholder="Email">
          <input type="password" name="password" placeholder="Password">
          <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
          <button title="Log in" type="submit" class="btn btn-default"><span class="glyphicon glyphicon-log-in"></span></button>
        </form>
      </li>
      <li><a href="/users/new"> <button id="signup-button" type="submit" class="btn btn-default">Sign up</button></a></li>

    <%end%>
  </ul>
</navbar>